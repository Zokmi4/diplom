version: '3'
services:
  prometheus:
    image: prom/prometheus:latest
    volumes:
      - /etc/docker-compose/prometheus.yml:/etc/prometheus/prometheus.yml
      - /etc/docker-compose/alerts.yml:/etc/prometheus/alerts.yml
    ports:
      - "9090:9090"
    restart: always

  grafana:
    image: grafana/grafana:latest
    volumes:
      - /etc/docker-compose/grafana:/etc/grafana
    ports:
      - "3000:3000"
    restart: always

  loki:
    image: grafana/loki:latest
    volumes:
      - /etc/docker-compose/loki-config.yml:/etc/loki/loki-config.yaml
    ports:
      - "3100:3100"
    restart: always

  logstash:
    image: docker.elastic.co/logstash/logstash:7.16.2
    volumes:
      - /etc/docker-compose/logstash-config.yml:/usr/share/logstash/config/logstash.yml
      - /etc/docker-compose/logstash-pipeline.conf:/usr/share/logstash/pipeline/logstash.conf
    ports:
      - "5044:5044"
      - "9600:9600"
    restart: always

  alertmanager:
    image: prom/alertmanager:latest
    volumes:
      - /etc/docker-compose/alertmanager.yml:/etc/alertmanager/alertmanager.yml
    ports:
      - "9093:9093"
    restart: always
