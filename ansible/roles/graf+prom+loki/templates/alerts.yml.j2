groups:
- name: node_exporter_alerts
  rules:
  - alert: InstanceDown
    expr: up{job="node_exporter"} == 0
    for: 5m
    labels:
      severity: page
    annotations:
      summary: "Instance {{ \"{{\" }}labels.instance{{ \"}}\" }} down"
      description: "{{ \"{{\" }}labels.instance{{ \"}}\" }} of job {{ \"{{\" }}labels.job{{ \"}}\" }} has been down for more than 5 minutes."

  - alert: HighCPUUsage
    expr: (100 - avg by(instance) (irate(node_cpu_seconds_total{mode="idle"}[5m]) * 100)) > 75
    for: 2m
    labels:
      severity: page
    annotations:
      summary: "High CPU usage detected"
      description: "CPU usage on {{ \"{{\" }}labels.instance{{ \"}}\" }} is above 75%."

  - alert: HighMemoryUsage
    expr: (node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes) / node_memory_MemTotal_bytes * 100 > 75
    for: 2m
    labels:
      severity: page
    annotations:
      summary: "High memory usage detected"
      description: "Memory usage on {{ \"{{\" }}labels.instance{{ \"}}\" }} is above 75%."

  - alert: DiskSpaceUsed
    expr: (100.0 - (node_filesystem_avail_bytes{job="node_exporter"} / node_filesystem_size_bytes{job="node_exporter"} * 100)) > 80
    for: 10m
    labels:
      severity: page
    annotations:
      summary: "Disk space usage above 80%"
      description: "Disk space usage on {{ \"{{\" }}labels.instance{{ \"}}\" }} is above 80%."

  - alert: HighNetworkTrafficReceive
    expr: irate(node_network_receive_bytes_total{job="node_exporter"}[5m]) * 8 > 5000
    for: 5m
    labels:
      severity: page
    annotations:
      summary: "High network traffic (receive)"
      description: "Network receive traffic on {{ \"{{\" }}labels.instance{{ \"}}\" }} is above 5000 bits per second."

  - alert: HighNetworkTrafficTransmit
    expr: irate(node_network_transmit_bytes_total{job="node_exporter"}[5m]) * 8 > 5000
    for: 5m
    labels:
      severity: page
    annotations:
      summary: "High network traffic (transmit)"
      description: "Network transmit traffic on {{ \"{{\" }}labels.instance{{ \"}}\" }} is above 5000 bits per second."

