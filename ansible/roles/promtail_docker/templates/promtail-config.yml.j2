server:
  http_listen_port: 9080
  grpc_listen_port: 0

positions:
  filename: /tmp/positions.yaml

clients:
  - url: http://http://localhost:3100/loki/api/v1/push

scrape_configs:
- job_name: syslog
  syslog:
    listen_address: 0.0.0.0:1514
    label_structured_data: yes
  relabel_configs:
    - source_labels: ['__syslog_message_hostname']
      target_label: 'host'

- job_name: rsyslog
  static_configs:
  - targets:
      - localhost
    labels:
      job: rsyslog
      __path__: /var/log/syslog
