version: '3'
services:
  prometheus:
    image: prom/prometheus:latest
    volumes:
      - /etc/docker-compose/prometheus.yml:/etc/prometheus/prometheus.yml
      - /etc/docker-compose/alerts.yml:/etc/prometheus/alerts.yml
    ports:
      - "9090:9090"
    restart: always

  grafana:
    image: grafana/grafana:latest
    volumes:
      - /etc/docker-compose/grafana:/etc/grafana
    ports:
      - "3000:3000"
    restart: always

  alertmanager:
    image: prom/alertmanager:latest
    volumes:
      - /etc/docker-compose/alertmanager.yml:/etc/alertmanager/alertmanager.yml
    ports:
      - "9093:9093"
    restart: always
