global:
  scrape_interval: {{ prometheus_scrape_interval }}

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'prod'
    static_configs:
      - targets: ['34.134.198.174:9090']  # IP адрес прод машины

  - job_name: 'test'
    static_configs:
      - targets: ['34.41.24.58:9090']  # IP адрес тест машины

  - job_name: 'loki'
    static_configs:
      - targets: ['localhost:3100']

  - job_name: 'node_exporter'
    static_configs:
      - targets: ['34.56.209.145:9100']
      - targets: ['34.134.198.174:9100']
      - targets: ['34.41.24.58:9100']
